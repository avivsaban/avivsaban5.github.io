      }
    ],
    "scales": [
      {
        "name": "x",
        "type": "time",
        "titleColor": "white",
        "domain": {"data": "source_0", "field": "Year"},
        "range": [0, {"signal": "width"}]
      },
      {
        "name": "y",
        "type": "linear",
        "domain": {
          "data": "source_0",
          "fields": ["S Korea", "Japan", "UK", "Italy", "Spain", "France", "US"]
        },
        "range": [{"signal": "height"}, 0],
        "nice": true,
        "zero": true
      },
      {
        "name": "color",
        "type": "ordinal",
        "titleColor":"white",
        "domain": {
          "fields": [
            ["S Korea"],
            ["Japan"],
            ["UK"],
            ["Italy"],
            ["Spain"],
            ["France"],
            ["US"]
          ]
        },
        "range": [
          "red",
          "yellow",
          "orange",
          "lightgrey",
          "lightblue",
          "pink",
          "lightgreen"
        ]
       
        
      }
    ],
    "axes": [
      {
        "scale": "x",
        "orient": "bottom",
        "gridScale": "y",
        "grid": null,
        "tickCount": {"signal": "ceil(width/40)"},
        "domain": false,
        "labels": false,
        "aria": false,
        "maxExtent": 0,
        "minExtent": 0,
        "ticks": false,
        "zindex": 0,
        "labelColor":"white"
      },
      {
        "scale": "y",
        "orient": "left",
        "gridScale": "x",
        "grid": null,
        "tickCount": {"signal": "ceil(height/40)"},
        "domain": false,
        "labels": false,
        "aria": false,
        "maxExtent": 0,
        "minExtent": 0,
        "ticks": false,
        "zindex": 0
      },
      {
        "scale": "x",
        "orient": "bottom",
        "grid": false,
        "title": "Year",
        "titleColor": "white",
        "labelFlush": true,
        "labelColor":"white",
        "labelOverlap": true,
        "tickCount": {"signal": "ceil(width/40)"},
        "zindex": 0
      },
      {
        "scale": "y",
        "orient": "left",
        "grid": false,
        "labelOverlap": true,
        "labelColor":"white",
        "tickCount": {"signal": "ceil(height/40)"},
        "zindex": 0
      }
    ],
    "legends": [{"stroke": "color", "symbolType": "stroke", "labelColor": "white", "labelFontSize": 15}]
    }
    