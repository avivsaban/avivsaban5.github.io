            "y": {"scale": "y", "field": "Japan"},
            "defined": {
              "signal": "isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"]) && isValid(datum[\"Japan\"]) && isFinite(+datum[\"Japan\"])"
            }
          }
        }
      },
